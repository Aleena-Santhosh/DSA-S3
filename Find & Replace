#include <stdio.h>
#include <string.h>

int main() {
    char text[200], find[50], replace[50], result[300];
    int i = 0, j = 0, k, match;

    // Input original text
    printf("Enter the text: ");
    gets(text);  // Note: gets() is unsafe, use fgets() in real programs

    // Input word to find
    printf("Enter the word to find: ");
    gets(find);

    // Input replacement word
    printf("Enter the replacement word: ");
    gets(replace);

    int findLen = strlen(find);
    int replaceLen = strlen(replace);

    // Loop through each character in text
    while (text[i] != '\0') {
        // Check if the word matches
        match = 1;
        for (k = 0; k < findLen; k++) {
            if (text[i + k] != find[k]) {
                match = 0;
                break;
            }
        }

        // If match found → copy replacement word
        if (match == 1) {
            for (k = 0; k < replaceLen; k++) {
                result[j++] = replace[k];
            }
            i += findLen;  // Skip matched word in original text
        }
        // If no match → copy original character
        else {
            result[j++] = text[i];
            i++;
        }
    }

    result[j] = '\0';  // End the result string

    // Output modified text
    printf("Modified text: %s\n", result);

    return 0;
}
