#include <stdio.h>
#define SIZE 10  // Size of the hash table

int main() {
    int hashTable[SIZE];
    int n, key, index;

    // Step 1: Initialize all positions to EMPTY (-1)
    for (int i = 0; i < SIZE; i++) {
        hashTable[i] = -1;
    }

    // Step 2: Input number of keys to insert
    printf("How many numbers? ");
    scanf("%d", &n);

    // Step 3: Check if input exceeds table size
    if (n > SIZE) {
        printf("Too many numbers. Maximum allowed is %d.\n", SIZE);
        return 0;
    }

    // Step 4: Insert each key using hash function and linear probing
    for (int i = 0; i < n; i++) {
        printf("Enter number: ");
        scanf("%d", &key);

        index = key % SIZE;  // Hash function

        // Linear probing to find next available slot
        while (hashTable[index] != -1) {
            index = (index + 1) % SIZE;
        }

        hashTable[index] = key;
    }

    // Step 5: Display the hash table
    printf("\n--- Hash Table ---\n");
    for (int i = 0; i < SIZE; i++) {
        if (hashTable[i] == -1)
            printf("Index %d: EMPTY\n", i);
        else
            printf("Index %d: %d\n", i, hashTable[i]);
    }

    return 0;
}
